import os
import pandas as pd
from mirp import extract_features

# Define your base path
filepath = "../../Data/radiomics/dicom_file/"
all_patient_features = []

# Loop from 1 to 422
for i in range(1, 423):
    patient_id = f"LUNG1-{i:03d}"  # Formats 1 into "001", etc.
    patient_path = os.path.join(filepath, patient_id)
    
    # Check if the folder exists to avoid errors if a number is missing
    if not os.path.exists(patient_path):
        print(f"Skipping {patient_id}: Folder not found.")
        continue

    try:
        # 1. Identify the unique StudyID subfolder
        # take the first item in the list because you mentioned there is only one
        subfolder_list = [f for f in os.listdir(patient_path) if os.path.isdir(os.path.join(patient_path, f))]
        study_folder = subfolder_list[0]
        study_path = os.path.join(patient_path, study_folder)

        # 2. Identify the Image (0.) and Mask (300.) sub-subfolders
        sub_subfolders = os.listdir(study_path)
        
        # Use a tuple ("0.", "1.") to check for multiple possible starts
        try:
            img_sub = next(f for f in sub_subfolders if f.startswith(("0.", "1.")))
            mask_sub = next(f for f in sub_subfolders if f.startswith("300."))
        except StopIteration:
            print(f"Skipping {patient_id}: Could not find both image (0./1.) and mask (300.) folders.")
            continue

        print(f"Processing {patient_id}...")

        # 3. Perform feature extraction
        features = extract_features(
            image=patient_path,
            image_sub_folder=os.path.join(study_folder, img_sub),
            mask=patient_path,
            mask_sub_folder=os.path.join(study_folder, mask_sub),
            roi_name="Neoplasm, Primary",
            by_slice=True,
            intensity_normalisation="standardisation",
            new_spacing=1.0,
            base_discretisation_method="fixed_bin_number",
            base_discretisation_n_bins=16
        )

        # Add a column to identify which patient these features belong to
        # 'features' is typically a list of DataFrames if by_slice=True
        patient_df = pd.concat(features)
        patient_df.insert(0, 'PatientID', patient_id)
        
        all_patient_features.append(patient_df)

    except Exception as e:
        print(f"Error processing {patient_id}: {e}")

# 4. Final Concatenation of all samples
final_df = pd.concat(all_patient_features, ignore_index=True)




